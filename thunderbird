#!/usr/bin/env php

<?php

// Load composer dependencies
require __DIR__ . '/vendor/autoload.php';

// Use stuff
use Symfony\Component\Console\Application;
use Thunderbird\Commands\BuildCommand;
use Thunderbird\Commands\ClearCacheCommand;
use Thunderbird\Commands\UpdateCommand;

// Register synforny application
$application = new Application('Thunderbird');

// Load commands
$application->add(new BuildCommand());
$application->add(new ClearCacheCommand());
$application->add(new UpdateCommand());

// Run the application
$application->run();